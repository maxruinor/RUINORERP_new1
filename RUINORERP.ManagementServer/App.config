<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <appSettings>
        <!-- 服务器配置 -->
        <add key="ServerIP" value="0.0.0.0" />
        <add key="ServerPort" value="8080" />
        
        <!-- 数据库配置 -->
        <add key="ConnectionString" value="Server=localhost;Database=RUINORERP_ManagementServer;User Id=sa;Password=your_password;" />
        
        <!-- Redis配置 -->
        <add key="RedisConnection" value="localhost:6379,defaultDatabase=0" />
        
        <!-- 心跳配置 -->
        <add key="HeartbeatTimeout" value="30000" />
        
        <!-- 日志配置 -->
        <add key="LogLevel" value="Info" />
        
        <!-- 授权配置 -->
        <add key="AuthorizationCheckInterval" value="86400000" />
    </appSettings>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>