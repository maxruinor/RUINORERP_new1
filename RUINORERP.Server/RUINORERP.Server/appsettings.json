{
  "serverOptions": {
    "ServiceforLander": {
      "name": "ServiceforLander",
      "listeners": [
        {
          "ip": "Any",
          "port": "3008"
        }
      ]
    },
    "ServiceforBiz": {
      "name": "ServiceforBiz",
      "listeners": [
        {
          "ip": "Any",
          "port": "3001",
          "MaxRequestLength": 2048
        }
      ]
    }
  },


  "SmartReminder": {
    "CheckInterval": "00:05:00",
    "CacheSettings": {
      "StockCacheTTL": "00:00:30"
    },
    "Engines": {
      "Default": "RulesEngine",
      "RulesEngine": {
        "MaxNestedLevel": 3
      },
      "Roslyn": {
        "CacheEnabled": true
      }
    },
    "Workflows": {
      "OrderApproval": {
        "Timeout": "24:00:00",
        "EscalationSteps": 3
      }
    }
  },


  "InventoryMonitoring": {
    "InitialDelay": "00:00:30", // 首次检查延迟
    "CheckInterval": "00:05:00", // 常规检查间隔
    "EmergencyCheckInterval": "00:01:00", // 紧急模式间隔
    "EnableRealTime": true,
    "WorkingHoursStart": 9,
    "WorkingHoursEnd": 18
  },

  "Logging": {
    "LogLevel": {
      "System": "Error",
      "Default": "Error",
      "Microsoft": "Error",
      "RUINORERP.Server": "Error",
      "RUINORERP.Server.frmMain": "Error",
      "WorkflowCore.Services.WorkflowHost": "Error",
      "RUINORERP.Server.Workflow": "Error" // 关键配置：设置你的工作流命名空间日志级别
    },
    "Console": {
      "IncludeScopes": true
    }
  },

